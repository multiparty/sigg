{
  "$id": "https://github.com/multiparty/sigg/blob/master/schemas/circuit.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Representation of a circuit consisting of logic gates",
  "type": "object",
  "properties": {
    "gate_count": { "$ref": "#/definitions/nonnegative" },
    "wire_count": { "$ref": "#/definitions/nonnegative" },
    "value_in_count": { "$ref": "#/definitions/nonnegative" },
    "value_in_length": { "$ref": "#/definitions/array_of_nonnegative" },
    "value_out_count": { "$ref": "#/definitions/nonnegative" },
    "value_out_length": { "$ref": "#/definitions/array_of_nonnegative" },
    "wire_in_count": { "$ref": "#/definitions/nonnegative" },
    "wire_in_index": { "$ref": "#/definitions/array_of_nonnegative" },
    "wire_out_count": { "$ref": "#/definitions/nonnegative" },
    "wire_out_index": { "$ref": "#/definitions/array_of_nonnegative" },
    "gate": {
      "type": "array",
      "items": { "$ref": "#/definitions/gate" }
    }
  },
  "required":[
    "gate_count",
    "wire_count",
    "value_in_count",
    "value_in_length",
    "value_out_count",
    "value_out_length",
    "gate"
  ],
  "definitions": {
    "nonnegative": {
      "type": "integer",
      "minimum": 0
    },
    "array_of_nonnegative": {
      "type": "array",
      "items": { "$ref": "#/definitions/nonnegative" }
    },
    "gate": {
      "type": "object",
      "properties": {
        "wire_in_count": { "$ref": "#/definitions/nonnegative" },
        "wire_in_index": { "$ref": "#/definitions/array_of_nonnegative" },
        "wire_out_count": { "$ref": "#/definitions/nonnegative" },
        "wire_out_index": { "$ref": "#/definitions/array_of_nonnegative" },
        "operation": { "$ref": "#/definitions/operation" }
      },
      "required":[
        "wire_in_index",
        "wire_out_index",
        "operation"
      ]
    },
    "operation": {
      "type": "string",
      "enum": ["not", "xor", "and"]
    }
  }
}
